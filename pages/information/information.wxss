/* pages/information/information.wxss */
page{
  width: 100%;
  height: 100vh;
  background-color: honeydew;
  text-align: center;
}
.imageBox{
  width: 100%;
  /* height: 360rpx; */
}
.swiper{
  width: 100%;
  height: 360rpx;
}
.swiper image {
  height: 360rpx;
  width: 100%;
}
.item {
  width: 100vh;
  height: 360rpx;
  background-color: rgb(225, 226, 225);
  text-align: center;
}
.infoBar{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  height: 80rpx;
  background-color: white;
  margin-top: 8rpx;
  border-bottom: 1rpx solid rgb(179, 178, 178);
  align-items: center;
}

.container{
  width: 100vw;
  height: 100vh;
  background-color: #F4F5F9;
}

.tui-navigatorbar{
  position: absolute;
  top: 0;
  width: 750rpx;
  height: 260rpx;
  background-color: #006EFF;
}

.tui-navigatorbar-back{
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 24rpx;
  bottom: 20rpx;
}

.conversation-title {
  position: absolute;
  width: 350rpx;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  bottom: 0px;
  left: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.conversation-list-area {
  position: absolute;
  width: 100vw;
  height: calc(100vh - 190px);
  top: 260rpx;
}